{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="{{post_class}}__header">
        <h2 class="{{post_class}}__title"><a href="{{url}}">{{{title}}}</a></h2>
        <div class="{{post_class}}__meta">
          <h4 class="{{post_class}}__author">
            {{author}}
          </h4>
          <time class="{{post_class}}__date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
        </div>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt words="50"}} <a class="read-more" href="{{url}}">Read more &raquo;</a></p>
    </section>
    <footer class="post-meta">
        {{tags prefix=" on "}}
    </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
