{{!< default}}
<main class="content" role="main">

    <article class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}

        <header class="{{post_class}}__header">
            <h1 class="{{post_class}}__title">{{title}}</h1>
            <section class="{{post_class}}__meta">
                <h4 class="{{post_class}}__author">By {{author.name}}</h4> on
                <time class="{{post_class}}__date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM, DD YYYY"}}</time> {{tags prefix=" on "}}
            </section>
        </header>

        <section class="{{post_class}}__content">
            {{content}}
        </section>

        <footer class="{{post_class}}__footer">
          {{! Everything inside the #author tags pulls data from the author }}
